                  h3.categories__content-item-description-title Бургери
          .categories__content-item-box
            a.categories__content-item-link(href='hot_meals/')
              .categories__content-item(style='background-image: url(img/menu_catregories/category-hot_meals.jpg);')
                .categories__content-item-description
                  h3.categories__content-item-description-title Гарячі страви
          .categories__content-item-box
            a.categories__content-item-link(href='pans/')
              .categories__content-item(style='background-image: url(img/menu_catregories/category-pans.jpg);')
                .categories__content-item-description
                  h3.categories__content-item-description-title Пательні
          .categories__content-item-box
            a.categories__content-item-link(href='children/')
              .categories__content-item(style='background-image: url(img/menu_catregories/category-children.jpg);')
                .categories__content-item-description
                  h3.categories__content-item-description-title Для діточок
          .categories__content-item-box
            a.categories__content-item-link(href='sweets/')
              .categories__content-item(style='background-image: url(img/menu_catregories/category-sweets.jpg);')
                .categories__content-item-description
                  h3.categories__content-item-description-title Солодке
          .categories__content-item-box.categories__content-item.categories__content-item--hidden
          .categories__content-item-box.categories__content-item.categories__content-item--hidden
    include includes/footer.pug

    script(src='js/main.min.js')
